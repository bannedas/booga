<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <!--<item name="android:windowFullscreen">true</item>-->
  </style>
  <style name="Booga.Theme" parent="@android:style/Theme.Material.Light" tools:targetApi="lollipop" />

  <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:windowBackground">@drawable/splash_screen</item>
  </style>

  <declare-styleable name="SympliTextView">
    <attr name="fontPath" format="string"/>

    <!-- Inner shadow settings. -->
    <attr name="innerShadowColor" format="color"/>
    <attr name="innerShadowDx" format="dimension"/>
    <attr name="innerShadowDy" format="dimension"/>
    <attr name="innerShadowRadius" format="dimension"/>

    <!-- Outer shadow settings. -->
    <attr name="outerShadowColor" format="color"/>
    <attr name="outerShadowDx" format="dimension"/>
    <attr name="outerShadowDy" format="dimension"/>
    <attr name="outerShadowRadius" format="dimension"/>
  </declare-styleable>

  <style name="text_view_name_style" parent="android:Widget.TextView">
    <item name="fontPath">fonts/${FONT_FILE}</item>
    <item name="android:textColor">@color/color_000000</item>
    <item name="android:textSize">@dimen/text_view_name_size</item>
    <item name="android:textStyle">normal</item>

  </style>

  <style name="text_view_user_info_style" parent="android:Widget.TextView">
    <item name="fontPath">fonts/${FONT_FILE}</item>
    <item name="android:textColor">@color/color_4a4a4a</item>
    <item name="android:textSize">@dimen/text_view_user_info_size</item>
    <item name="android:textStyle">normal</item>

  </style>
</resources>

